{
  "events": {
    "state_transition_to_b": {
      "handler": "transition_to_state_b"
    },
    "show_message_event": {
      "handler": "show_console_message",
      "params": {
        "message": "Hello, this is a custom message!"
      }
    },
    "show_message": {
      "handler": "show_message",
      "params": {
        "message": "Hello!\nClick and Place the label on object which match the value"
      }
    },
    "message_running_out_of_time": {
      "handler": "show_console_message",
      "params": {
        "message": "You are running out of time!"
      }
    },
    "message_all_label_is_right": {
      "handler": "show_message",
      "params": {
        "message": "All labels is right"
      }
    }

  },
  "states": [
    {
      "name": "StateA",
      "triggers": [
        {
          "type": "PointQueryTrigger",
          "entity_name": "ball_2",
          "target_point": [300, 300],
          "events": ["show_message_event"],
          "space": "pymunk_space",
          "min_duration": 1
        },
        {
          "type": "TimerTrigger",
          "duration": 1,
          "events": ["message_running_out_of_time", "show_message"],
          "start_immediately": true,
          "once": true
        },
        {
          "type": "LabelTrigger",
          "label_names": ["label1", "label2"],
          "events": ["message_all_label_is_right"],
          "once": true
        }
      ]
    },
    {
      "name": "StateB",
      "triggers": [
        {
          "type": "TimerTrigger",
          "duration": 2,
          "events": ["show_message_event"],
          "start_immediately": true
        }
      ]
    }
  ]
}
